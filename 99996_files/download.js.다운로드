function downloadFileNew(attachId, boardType) {
    // form 을 가져와서 초기화
    var oForm = document.getElementById("downloadFileForm");

    var attachIdInput = oForm.attachId;
    var boardTypeInput = oForm.boardType;

    attachIdInput.value = attachId;
    boardTypeInput.value = boardType;

    oForm.submit();
}
