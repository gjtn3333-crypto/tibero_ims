function downloadAttachFile(path, fileName, seqFileName) {
    // _var = window.open("", 'exceptionPopup','width=500,height=300, toolbar=0,status=0,menubar=no,scrollbars=no,left=140,top=60');

    // Form객체를 만들고 속성값들을 추가함
    var oForm = document.createElement("<form name=downloadForm></form>");

    oForm.method = "post";
    //oForm.action = "/util/downAttachFile.jsp";
    oForm.action = "download";


    // TextBox를 생성함
    var filePath = document.createElement("<input type = hidden  name=filePath    id=filePath>");
    var originFileName = document.createElement("<input type = hidden  name=fileName    id=fileName>");
    var realFileName = document.createElement("<input type = hidden  name=seqFileName id=seqFileName>");

    filePath.value = path;
    originFileName.value = fileName;
    realFileName.value = seqFileName;

    // Form안에 TextBox를 넣음
    oForm.appendChild(filePath);
    oForm.appendChild(originFileName);
    oForm.appendChild(realFileName);

    // Body안에 Form을 넣음
    document.body.appendChild(oForm);

    // 해당 Form을 Submit함
    oForm.submit();
}

