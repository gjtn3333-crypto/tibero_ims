}

function goIssueRegistReport() {  
  var myform=document.forms[0];
  myform.method="get";
  //myform.target="winName";  
  myform.action="/tody/ims/issue/issueRegistReport.do";
  return true;	
}

function goIssueDispoReport() {  
  var myform=document.forms[0];
  myform.method="get";
  myform.orderBy.value = ""; 
  //myform.target="winName";  
  myform.action="/tody/ims/issue/issueDispoReport.do";
  return true;	
}

function goIssueCmpReport() {    
  var myform=document.forms[0];
  var reportType = document.getElementById("reportType").value;
  if (isNull(reportType)){
     alert("Please select report type.");
     return false;
  }
  
  jQuery("#load").show();
  myform.method="get";
  myform.orderBy.value = ""; 
  myform.action="/tody/ims/issue/issueCmpReport.do";
  return true;	
}

