function setReport(reportTP) {    
  var rType = document.getElementById(reportTP).value;
  var token = rType.split(';');
  document.getElementById("reportType").value = token[0]; 
  document.getElementById("reportLink").value = token[1];
  
  var DIVArr = document.getElementsByTagName("DIV");
  var tmp, tmp2;
  for(i=0; i<DIVArr.length; i++){
     tmp = DIVArr[i];     
     tmp.style.display = "none";		
  }
  
  var DIV = document.getElementById(token[0]+"DIV");  
  DIV.style.display = ""; 

  	var tableObj = document.getElementById(token[0]+"Table");  	
  	var tRows = tableObj.rows;
  	var tLength = tRows.length;
    
  	for(j=2; j<(tLength-1); j++)
  	{        
      tableObj.deleteRow(2);      
  	}

  var TR = document.getElementById(token[0]+"NOTR");  
  TR.style.display = "";      

}
