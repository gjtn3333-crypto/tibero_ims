function viewReport(test, menuCode) {
	if (isNull(menuCode)) menuCode = "";
	if (isNull(test))     test = "";
	location.href = context + "/ims/issue/issueRegistReport.do";
}

function saveExcelRegist() {        		
  var myform=document.forms[0];
  myform.method="get";
  //myform.target="winName";  
  myform.action="/tody/util/saveToExcel.do";
  myform.submit();
}

