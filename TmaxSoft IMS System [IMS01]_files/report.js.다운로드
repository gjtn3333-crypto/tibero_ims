function setProductName(str){
   var f = document.forms[0];
   f.productName.value = str;
}

function strTokenizer(str, c){
    var i=0;
    var k=0;

    var arr = new Array;
    while(i > -1){
    	i = str.indexOf(c);
    	if(str.substr(0,i) != '') arr[k] = str.substr(0,i);
    	str = str.substr(i+1,str.length);
    	k++;
    }
    return arr;
}



